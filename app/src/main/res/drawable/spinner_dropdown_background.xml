<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected/Pressed state -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/github_dark_surface_variant" />
            <stroke 
                android:width="1dp" 
                android:color="@color/github_blue" />
        </shape>
    </item>
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/github_dark_surface_variant" />
            <stroke 
                android:width="1dp" 
                android:color="@color/github_blue" />
        </shape>
    </item>
    
    <!-- Hovered/Focused state -->
    <item android:state_hovered="true">
        <shape>
            <solid android:color="@color/github_dark_surface" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@color/github_dark_bg" />
        </shape>
    </item>
</selector>